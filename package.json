{
  "name": "portfolio-boilerplate",
  "version": "1.0.0",
  "description": "Portfolio boilerplate with codeigniter4 and bootstrap5",
  "main": "index.js",
  "scripts": {
    "dev:compile-scss:watch": "sass --watch scss:public/css",
    "dev:compile-scss": "sass scss:public/css",
    "dev:autoprefix": "postcss public/css/style.css --use autoprefixer -d public/css/style.css",
    "prod:minify-css": "cleancss -o public/css/style.min.css dev-assets/css/style.css --source-map",
    "build": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maher-Amara/portfolio-boilerplate.git"
  },
  "keywords": [
    "html5",
    "php7",
    "css3",
    "scss",
    "codeigniter4",
    "bootstrap5"
  ],
  "author": "maherDEV",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Maher-Amara/portfolio-boilerplate/issues"
  },
  "homepage": "https://github.com/Maher-Amara/portfolio-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "clean-css-cli": "^5.4.1",
    "postcss-cli": "^9.0.1",
    "sass": "^1.42.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "bootstrap": "^5.1.3"
  }
}
